#user-dashboard.pure-u-7-12
  .wrapper
    #user-info
      %h1#logo t('kiitos.title')
      #header-text
        %h4
          = raw t(can_send?, scope: 'kiitos.user_dashboard.index.instructions')
        %h2
          = raw t(can_send?, scope: 'kiitos.user_dashboard.index.instructions_2')
      #user-widget
        %ul#scene
          %li{ class: 'layer', 'data-depth' => '-2.30' }
            = image_tag 'kiitos/SVG/orange.svg'
          %li{ class: 'layer', 'data-depth' => '-5.60' }
            = image_tag 'kiitos/SVG/blue.svg'
          %li{ class: 'layer', 'data-depth' => '1.50' }
            = image_tag 'kiitos/SVG/green.svg'
          %li{ class: 'user-pic' }
            = avatar

        .welcome-back
          %p
            = t('.welcome_back')
          = format_user_name kiitos_current_user
    #new-kiito{class: (can_send?)}
      = render 'kiitos/user_dashboard/form', message: @message

    = render 'shared/separator'

    = render 'shared/footer'

#received-kiitos.pure-u-5-12
  %h1
    = t('.received_kiitos')
  = form_tag user_dashboard_path, method: :get, class: 'nav-tabs' do
    %ul
      %li
        %button{name: 'search_span'}
          = t('.all')
      %li
        = link_to t('.recent'), user_dashboard_path
  %ul.list-group
    - @messages.each do |message|
      %li
        .badge
          /= message.kiitos_kiito.image
          = image_tag 'kiitos/PNG/category.png'
        .message-info
          %p.title
            = message.kiitos_kiito.title
          .dialog
            = message.message
          %span.sender
            by
            = message.sender_name
          %span.message-date
            = pretty_date(message.created_at)

:coffee
  initialize_parallax()
  scene = document.getElementById 'scene'
  parallax = new Parallax(scene,
    scalarY: 30
  )
